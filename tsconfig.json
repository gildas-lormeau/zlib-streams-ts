{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "test-merge/**/*.ts"],
  "exclude": ["node_modules"]
}
